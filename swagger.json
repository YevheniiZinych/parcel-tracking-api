{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "TrackingPost",
    "description": "Base URL https://post-office-ixqj.onrender.com"
  },
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "servers": [{ "url": "https://post-office-ixqj.onrender.com" }],
  "tags": [
    {
      "name": "Invoice",
      "description": "Find your parcel by TTN"
    },
    {
      "name": "Office",
      "description": "Find posts office by city name"
    }
  ],
  "paths": {
    "/api/invoices": {
      "post": {
        "tags": ["Invoice"],
        "summary": "Back location your parcel",
        "parameters": [],
        "requestBody": {
          "description": "TTN number",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ParcelRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ParcelResponse"
                }
              }
            }
          },
          "404": {
            "description": "Not found"
          }
        }
      }
    },
    "/api/offices?page={currentPage}&limit={limit}": {
      "post:": {
        "tags": ["Office"],
        "summary": "Back list of offices by city name",
        "parameters": [
          {
            "name": "currentPage",
            "in": "path",
            "description": "The page on witch to fined list post offices ",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "limit",
            "in": "path",
            "description": "Number of offices you want to see in one go ",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "TTN number",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OfficeRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "$schema": {
                  "$ref": "#/components/schemas/OfficeResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ParcelRequest": {
        "type": "object",
        "required": ["number"],
        "properties": {
          "number": {
            "type": "string",
            "description": "Number of parcel",
            "format": "20450731655055"
          }
        }
      },
      "ParcelResponse": {
        "type": "object",
        "items": {
          "properties": {
            "WarehouseRecipient": {
              "type": "string",
              "description": "From where parcel was sent ",
              "example": "Відділення №2 (до 30 кг): вул. Квітнева, 1А"
            },
            "WarehouseSender": {
              "type": "string",
              "description": "From where parcel was took ",
              "example": "Відділення №11 (до 30 кг): вул. Проскурівського підпілля, 71/1"
            },
            "Status": {
              "type": "string",
              "description": "From where parcel was took ",
              "example": "Відправлення отримано"
            },
            "Number": {
              "type": "string",
              "description": "TTN number",
              "example": "20450731655055"
            }
          }
        }
      },
      "OfficeRequest": {
        "type": "object",
        "required": ["city"],
        "properties": {
          "city": {
            "type": "string",
            "description": "City name where you need to find ",
            "example": "Київ"
          }
        }
      },
      "OfficeResponse": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "Description": {
              "type": "string",
              "description": "Address post office",
              "example": "Відділення №1 (до 30 кг на одне місце): вул. Пирогівський шлях, 135"
            },
            "Number": {
              "type": "string",
              "description": "Number of post office",
              "example": "1"
            },
            "Reception": {
              "type": "object",
              "description": "Work schedule",
              "items": {
                "Monday": {
                  "type": "string",
                  "example": "08:00-21:00"
                },
                "Tuesday": {
                  "type": "string",
                  "example": "08:00-21:00"
                },
                "Wednesday": {
                  "type": "string",
                  "example": "08:00-21:00"
                },
                "Thursday": {
                  "type": "string",
                  "example": "08:00-21:00"
                },
                "Friday": {
                  "type": "string",
                  "example": "08:00-21:00"
                },
                "Saturday": {
                  "type": "string",
                  "example": "08:00-21:00"
                },
                "Sunday": {
                  "type": "string",
                  "example": "08:00-21:00"
                }
              }
            }
          }
        }
      }
    }
  }
}
